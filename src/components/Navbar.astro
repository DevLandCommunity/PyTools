---
    links = {
        "Home": "/",
        "REPL": "/repl",
        "String escaper": "/string_escaper",
        "Image2b64 URL": "/image_to_url"
    }
---
<nav>
    <a href="/" class="home">
        <div class="logo">
            <img src="/assets/logo.png" alt="Tooblox-like logo with Python color scheme" class="logo-img"><h1>PyTools</h1>
        </div>
    </a>
    <div class="nav-collapse">
            |||
        </div>
    <div class="links">
        {Object.keys(links).map((link) => (
            <a href={links[link]}>{link}</a>
        ))}
    </div>
</nav>

<style>

    .home {
        height: 100%;
    }

    .logo-img, .logo {
        height: 100%;
    }

    .logo {
        display: flex;
        align-items: center;
    }

    nav {
        display: flex;
        align-items: center;
        justify-content: space-around;
        width: 100%;
        height: 10vh;
        border-bottom: 2px solid white;
    }

    .links {
        display: flex;
        align-items: center;
        justify-content: space-between;
        width: 500px;
        max-width: 100%;
        flex-flow: wrap;
    }

    .links a {
        font-size: large;
    }

    .nav-collapse {
        display: none;
    }

    @media screen and (max-width: 1000px) {
        .links {
            position: fixed;
            top: 10vh;
            left: 0;
            height: 0;
            width: 100%;
            overflow: hidden;
            display: block;
            width: 100%;
            background: var(--background);
            transition: height ease 0.3s;
            text-align: center;
            border-bottom: 2px solid white;
        }

        .links * {
            width: 100%;
            display: block;
        }

        nav:hover .links {
            height: 300px;
        }

        .nav-collapse {
            display: initial;
            font-size: xx-large;
            transform: rotate(90deg);
        }
    }
</style>